extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      //- Title 
      h1 My Portfolio

      //- Description 
      p.lead.text-light
        | Here is a collection of my previous projects completed in the Treahouse Aprenticeship Program.

  //- create  project img, title and link
  article.grid-container.portfolio-index   
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/images/${project.image_urls[0]}.png`)
            h5 #{project.project_name}
        

  